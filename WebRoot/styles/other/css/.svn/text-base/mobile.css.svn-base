}

.myAssignee{
	background:url(../images/mobile/myAssignee.jpg) no-repeat;
}

.taskAssignee{
	background:url(../images/mobile/taskAssignee.jpg) no-repeat;
}

.userImage{
	background:url(../images/mobile/userImage.jpg) no-repeat;
	float: right;
